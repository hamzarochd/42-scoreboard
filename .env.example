# API Configuration
# Set to 'true' to use real 42 School API, 'false' for mock data
VITE_USE_REAL_API=false

# 42 School API Configuration
# Get these values from your 42 School application settings
# https://profile.intra.42.fr/oauth/applications
VITE_42_API_BASE_URL=https://api.intra.42.fr
VITE_42_CLIENT_ID=your_client_id_here
VITE_42_CLIENT_SECRET=your_client_secret_here
VITE_42_REDIRECT_URI=http://localhost:5173/auth/callback

# Note: In production, use your production domain for VITE_42_REDIRECT_URI
# Example: VITE_42_REDIRECT_URI=https://yourdomain.com/auth/callback
